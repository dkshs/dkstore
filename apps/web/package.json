{
  "name": "@dkstore/web",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "DkStore Website.",
  "scripts": {
    "dev": "concurrently --kill-others --names \"next,worker\" -c \"black,yellow\" \"pnpm dev:next\" \"pnpm dev:worker\"",
    "dev:next": "next dev --turbo",
    "dev:worker:start": "pm2 start ecosystem.config.cjs --watch --env development && pm2 logs",
    "dev:worker": "concurrently --kill-others --names \"build,logs\" -c \"blue,yellow\" \"rslib build --watch\" \"pnpm dev:worker:start\"",
    "postdev": "pnpm pm2:down",
    "pm2:down": "pm2 delete all",
    "clean": "git clean -xdf .next .turbo node_modules",
    "build": "pnpm build:worker && pnpm build:next",
    "build:next": "next build",
    "build:worker": "rslib build",
    "start": "next start",
    "start:worker": "pm2-runtime start ecosystem.config.cjs --env production",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dkstore/db": "workspace:*",
    "@dkstore/email": "workspace:*",
    "@dkstore/env": "workspace:*",
    "@dkstore/queue": "workspace:*",
    "@dkstore/ui": "workspace:*",
    "@dkstore/utils": "workspace:*",
    "@hookform/resolvers": "^4.1.3",
    "@t3-oss/env-nextjs": "^0.12.0",
    "@uidotdev/usehooks": "^2.4.1",
    "bcryptjs": "^3.0.2",
    "jose": "^6.0.10",
    "lucide-react": "^0.483.0",
    "next": "15.2.3",
    "next-safe-action": "^7.10.4",
    "next-themes": "^0.4.6",
    "nodemailer": "^6.10.0",
    "pm2": "^6.0.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-toastify": "^11.0.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@dkshs/eslint-config": "4.5.0",
    "@dkstore/tsconfig": "workspace:*",
    "@rsbuild/plugin-react": "^1.1.1",
    "@rslib/core": "^0.5.4",
    "@types/node": "^22.13.10",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20"
  }
}
