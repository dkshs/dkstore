{
  "name": "@dkstore/worker",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Worker for DkStore.",
  "scripts": {
    "build": "rslib build",
    "dev:start": "pm2 start ecosystem.config.cjs --watch --env development && pm2 logs worker",
    "dev": "concurrently --kill-others --names \"build,logs\" -c \"blue,yellow\" \"rslib build --watch\" \"pnpm dev:start\"",
    "postdev": "pnpm pm2:down",
    "start": "pm2-runtime start ecosystem.config.cjs --env production",
    "pm2:down": "pm2 delete all",
    "clean": "git clean -xdf .turbo dist node_modules",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dkstore/db": "workspace:*",
    "@dkstore/email": "workspace:*",
    "@dkstore/env": "workspace:*",
    "@dkstore/queue": "workspace:*",
    "@dkstore/utils": "workspace:*",
    "nodemailer": "^6.10.0",
    "pm2": "^6.0.5"
  },
  "devDependencies": {
    "@dkshs/eslint-config": "4.5.0",
    "@dkstore/tsconfig": "workspace:*",
    "@rslib/core": "^0.5.5",
    "@types/node": "^22.13.10",
    "@types/nodemailer": "^6.4.17",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20"
  }
}
