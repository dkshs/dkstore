{
  "name": "dkstore",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.6.5",
  "description": "An e-commerce with Turborepo, Next.Js, BullMQ and React Email.",
  "author": {
    "name": "Nicolas Contiero",
    "url": "https://github.com/dkshs"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dkshs/dkstore.git"
  },
  "scripts": {
    "build": "turbo build",
    "build:packages": "pnpm build --filter='./packages/*'",
    "dev": "turbo dev",
    "postdev": "pnpm -r pm2:down",
    "start:web": "turbo start --filter=@dkstore/web",
    "start:worker": "turbo start --filter=@dkstore/worker",
    "clean": "turbo clean && git clean -xdf .turbo node_modules -e .turbo/config.json",
    "eslint": "eslint . --flag unstable_config_lookup_from_file",
    "lint": "pnpm eslint && turbo lint",
    "lint:fix": "pnpm eslint --fix && turbo lint:fix",
    "typecheck": "turbo typecheck",
    "check": "pnpm lint && pnpm typecheck",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:deploy": "turbo db:deploy",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@dkshs/eslint-config": "4.5.0",
    "@dkstore/tsconfig": "workspace:*",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*": "pnpm eslint --fix"
  }
}
